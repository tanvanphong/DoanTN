<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="120dp"
            android:layout_height="100dp">
        <ImageView
            android:id="@+id/img_photo_cart"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hinhdc">

        </ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="204dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_product_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/helvetica"
                android:maxLines="1"
                android:text="Iphone 12"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/tv_price_product_cart"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_price_product_cart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="500.000 VND"
                android:textColor="@color/red"
                android:textSize="18sp"></TextView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_price_product_cart"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center">

                <Button
                    android:id="@+id/buttonminus"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#CDCFD5"
                    android:focusable="false"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonvalue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#fff"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonplus"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#CDCFD5"
                    android:focusable="false"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>